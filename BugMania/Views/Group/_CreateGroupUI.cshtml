@model BugMania.Models.GroupsViewModel

@{
    ViewBag.Title = "Create Group";
}

@using (Html.BeginForm("Create", "CreateGroup", FormMethod.Post, new { @id = "createGroupForm" }))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <label class="control-label col-md-2">Name</label>
            <div class="col-md-10">
                <input type="text" id="createGroupName" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Product</label>
            <div class="col-md-10">
                @Html.DropDownList("ProductId", null, htmlAttributes: new { @id = "createGroupProduct", @class = "form-control" })
            </div>
        </div>
    </div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}